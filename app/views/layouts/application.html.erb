<!DOCTYPE html>
<html>
<head>
  <title>CommuniTy</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if user_signed_in? %>
<header class="main_header clearfix">
	
	<%= link_to image_tag("main_logo.png"), root_path, class: "main_logo" %>

	<nav class="main_nav">
		<ul class="top_nav">
			<li><%= link_to "Tour", root_path %></li>
			<li><%= link_to "Support", root_path %></li>
			<li><%= link_to "My Account", root_path %></li>
		</ul>
	</nav>
	
</header>

<% else %>
<% end %>


<%= yield %>

<footer class="footer">
	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>
</footer>

</body>
</html>
