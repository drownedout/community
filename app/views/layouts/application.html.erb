<!DOCTYPE html>
<html>
<head>
  <title>CommuniTy</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if user_signed_in? %>
<header class="main_header clearfix">
	
	<%= link_to image_tag("main_logo.png"), root_path, class: "main_logo" %>

	<nav class="main_nav">
		<ul class="top_nav">
			<li><%= link_to "Tour", root_path %></li>
			<li><%= link_to "Support", root_path %></li>
			<li><%= link_to "My Account", edit_user_registration_path %></li>
			<li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
		</ul>
	</nav>
	
</header>

<% else %>
<header class="main_home_header clearfix">	
	<a href="#" class="main_logo"><%= link_to image_tag("main_logo.png"), root_path, class: "main_logo" %></a>
	<nav class="main_nav">
		<ul class="top_nav">
			<li><%= link_to "Tour", root_path %></li>
			<li><%= link_to "Support", root_path %></li>
			<li><%= link_to "Sign Up", new_user_registration_path %></li>
			<li><%= link_to "Login", new_user_session_path %></li>
	</nav>
</header>
<% end %>


<%= yield %>

<footer class="footer">
	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>
</footer>

</body>
</html>
