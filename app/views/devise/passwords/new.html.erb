<div class="form_body">

	<h2 class="form_title">Forgot your password?</h2>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= devise_error_messages! %>
	  <div class="field_body">
	  
		  <div class="field">
		    <%= f.label :email, class: "label" %><br />
		    <%= f.email_field :email, autofocus: true, class: "input" %>
		  </div>

		  <div class="actions">
		    <%= f.submit "Send me reset password instructions", class: "button button_green" %>
		  </div>

		<% end %>
	</div>

</div>

<div class="links_form">
	<p>Already have an account? <%= render "devise/shared/links" %></p>
</div>