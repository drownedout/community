<div class="signin_page_background">
  <h1>Welcome Back</h1>
</div>

<div class="form_body devise_form_body">
<h2 class="form_title">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field_body">
    <div class="field">
      <%= f.label :email, class: "label" %><br />
      <%= f.email_field :email, autofocus: true, class: "input" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "label" %><br />
      <%= f.password_field :password, autocomplete: "off", class: "input" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="input">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "button button_green" %>
    </div>
  <% end %>
  </div>
</div>
<div class="devise_links_form">
  <p><%= render "devise/shared/links" %></p>
</div>