<div class="form_body edit_profile_form_body">
<h2 class="form_title">Edit Your Profile</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
<div class="field_body">
  <div class="field">
      <%= f.label :firstname, "First Name", class: "label" %><br />
      <%= f.email_field :firstname, autofocus: true, class: "input" %>
    </div>

    <div class="field">
      <%= f.label :lastname, "Last Name", class: "label" %><br />
      <%= f.email_field :lastname, autofocus: true, class: "input" %>
    </div>
  <div class="field">
    <%= f.label :email, class: "label" %><br />
    <%= f.email_field :email, autofocus: true, class: "input" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
        <%= f.label :profile_picture, "Profile Picture", class: "label" %><br />
        <%= f.file_field :profile_picture, autofocus: true, class: "input" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "label" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: "input" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Password Confirmation", class: "label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "input" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "Current Password", class: "label" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: "input" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "button button_green" %>
  </div>
</div>
<% end %>
</div>
<div class="links_form">
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "button button_red" %></p>

<%= link_to "Back", :back %>
</div>