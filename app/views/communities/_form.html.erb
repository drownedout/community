<%= form_for @community do |f| %>
	<div class="field_body">
		<div class="field">
			<%= f.label :name, class: "label" %>
			<%= f.text_field :name, class: "input" %>
		</div>
		<div class="field">
			<%= f.label :state, class: "label" %><br/>
			<%= f.select :state, options_for_select(us_states), class: "input" %>
		</div>
		<div class="field">
			<%= f.label :location, class: "label" %>
			<%= f.text_field :location, class: "input" %>
		</div>
		<div class="field">
			<%= f.label :banner_image, "Banner Image", class: "label" %>
			<%= f.file_field :banner_image, class: "input" %>
		</div>
		<div class="field">
			<%= f.label :thumbnail_image, "Thumbnail Image", class: "label" %>
			<%= f.file_field :thumbnail_image, class: "input" %>
		</div>
		<div class="actions">
			<%= f.submit "Submit", class: "button button_blue" %>
		</div>
	</div>
<% end %>